<html lang="en">
<head>
  <title>TinyApp</title>
</head>
<body>
  <%- include partials/_header %>

  <% if (user !== undefined) { %>
  <!-- create new url -->
  <form method="GET" action="/urls/new">
    <input type="submit" value="New">
  </form>
  <% } %>

  <!-- list of all urls -->
  <ul>
    <% for (let shortURL in urls){ %>
      <li style="display:block;">
        <a href='/urls/<%= shortURL %>/'><%= shortURL %></a> 
        <%= `:  ${urls[shortURL].url} ` %>
        <!-- delete url -->
        <form method="POST" action="/urls/<%= shortURL %>/delete">
          <input type="submit" value="Delete">
        </form>
        <!-- edit url -->
        <form method="GET" action="/urls/<%= shortURL %>">
          <input type="submit" value="Edit">
        </form>
      </li>
    <% } %>
  </ul>
</body>
</html>
