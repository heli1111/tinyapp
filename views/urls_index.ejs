<html lang="en">

  <head>
    <title>TinyApp</title>
  </head>


<body>
  <%- include partials/_header %>
  <!--list url in a table, create href for short urls-->
  <ul>
    <% for (let url in urls){ %>
    
      <!-- adding DELETE button using POST method -->
      <form method="POST" action="/urls/<%= url %>/delete">
        <li> <a href='/urls/<%= url %>/'><%= url %></a><%= `:  ${urls[url]} ` %><input type="submit" value="Delete"></li>
      </form>
    
    <% } %>
  </ul>
</body>
</html>
